<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_900">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:scaleType="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/globe"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:text="Faculty of IT"
        android:id="@+id/btnfaculty" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Courses in IT"
        android:id="@+id/btncourses" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Admission"
        android:id="@+id/btnadmission" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/btncontact" />



        <ImageView
            android:id="@+id/picture"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/logo_limk" />



</LinearLayout>